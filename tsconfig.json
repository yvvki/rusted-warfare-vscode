{
	"compilerOptions": {
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "Preserve",
		"moduleDetection": "force",
		"allowJs": true,
		"rootDir": "src",
		"outDir": "out",

		// Bundler mode
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": true
	}
}
